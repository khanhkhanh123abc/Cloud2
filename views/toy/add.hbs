<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Add New Toy</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
   <form action="/toy/add" method="post" class="p-4">
      <h1 class="mb-3">Add New Toy</h1>

      <div class="form-group">
          <label for="model">Toy Model:</label>
          <input type="text" class="form-control" name="model" id="model" required>
      </div>
      <div class="form-group">
          <label for="price">Toy Price:</label>
          <input type="number" class="form-control" name="price" id="price" required>
      </div>
      <div class="form-group">
          <label for="image">Toy Image:</label>
          <input type="url" class="form-control" name="image" id="image" required>
      </div>

      <!-- Color Selection -->
      <fieldset class="form-group">
        <legend class="col-form-label pt-0">Toy color:</legend>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="color" value="Black" id="colorBlack">
            <label class="form-check-label" for="colorBlack">Black</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="color" value="White" id="colorWhite">
            <label class="form-check-label" for="colorWhite">White</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="color" value="Yellow" id="colorYellow">
            <label class="form-check-label" for="colorYellow">Yellow</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="color" value="Blue" id="colorBlue">
            <label class="form-check-label" for="colorBlue">Blue</label>
        </div>
    </fieldset>


      <div class="form-group">
          <label for="manufacturer">Toy Manufacturer:</label>
          <select class="form-control" name="manufacturer" id="manufacturer">
              {{#each manufacturers }}
              <option value="{{ _id }}">{{ name }}</option>
              {{/each}}
          </select>
      </div>
      <div class="form-group">
          <label for="country">Toy Country:</label>
          <select class="form-control" name="country" id="country">
              {{#each countrys }}
              <option value="{{ _id }}">{{ name }}</option>
              {{/each}}
          </select>
      </div>

      <button type="submit" class="btn btn-primary">Add</button>
   </form>

   <!-- Optional: Include Bootstrap JS -->
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>
