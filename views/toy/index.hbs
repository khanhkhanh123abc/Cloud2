

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col">
            <a class="btn btn-info" href="/toy/add">Add new toy</a>
            <a class="btn btn-primary" href="/toy/sort/asc">Sort ASC</a>
            <a class="btn btn-secondary" href="/toy/sort/desc">Sort DESC</a>
        </div>
        <div class="col-md-4">
            <form action="/toy/search" method="post">
                <input class="form-control" type="search" name="keyword" placeholder="Search by toy model" required>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-primary">
            <thead>
                <tr>
                    <th>Toy model</th>
                    <th>Toy price</th>
                    <th>Toy color</th>
                    <th>Toy manufacturer</th>
                    <th>Toy image</th>
                    <th colspan="2">Menu</th>
                </tr>
            </thead>
            <tbody>
                {{#each toys }}
                <tr>
                    <td>{{ model }}</td>
                    <td>{{ price }}</td>
                    <td>{{ color }}</td>
                    <td>{{ manufacturer.name }}</td>
                    <td><img src="{{ image }}" alt="" class="img-fluid" style="width: 100px; height: 120px;"></td>
                    <td><a class="btn btn-warning" href="/toy/edit/{{ _id }}">Edit</a></td>
                    <td>
                        <a class="btn btn-danger" href="/toy/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this toy?');">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
